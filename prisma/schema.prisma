generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// kvp table
model Kvp {
  id        String @id @default(cuid())
  key       String @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
